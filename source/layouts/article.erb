<% content_for :title do %>
  <%= current_article.title %>
<% end %>

<% content_for :keywords do %>
  <%= current_article.tags %>
<% end %>

<% if current_article.data["cover"] %>
  <% content_for :cover do %>
    <%= current_article.data["cover"] %>
  <% end %>
<% end %>

<% wrap_layout :layout do %>
  <article class="post single">

    <%= partial 'shared/post', locals: { article: current_article } %>

  </article>

  <div id="disqus_thread"></div>
  <script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'pragmaticlyblog'; // required: replace example with your forum shortname
    var disqus_identifier = '<%= disqus_identifier(current_article) %>';

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
  </script>

  <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

<% end %>
